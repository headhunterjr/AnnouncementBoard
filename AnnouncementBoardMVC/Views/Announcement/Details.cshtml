@model Announcement
@{
    ViewBag.Title = "Announcement Details";
}
<div class="container">
    <div class="details-container">
        <div class="details-title mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mb-0"><i class="fas fa-bullhorn me-2"></i>@Model.Title</h1>
            </div>
        </div>

        <div class="details-item mb-4">
            <div class="details-label">Description</div>
            <div class="details-value">@Model.Description</div>
        </div>

        <div class="card mb-3">
            <div class="card-header bg-light">
                <i class="fas fa-info-circle me-2"></i>Details
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="details-item mb-3">
                            <div class="details-label">Created</div>
                            <div class="details-value">@Model.CreatedDate.ToString("MMMM dd, yyyy")</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="details-item mb-3">
                            <div class="details-label">Category</div>
                            <div class="details-value">
                                @if (!string.IsNullOrEmpty(Model.Category))
                                {
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-tag me-1"></i>@Model.Category
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">None</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="details-item mb-3">
                            <div class="details-label">Subcategory</div>
                            <div class="details-value">
                                @if (!string.IsNullOrEmpty(Model.SubCategory))
                                {
                                    <span class="badge bg-info">
                                        <i class="fas fa-hashtag me-1"></i>@Model.SubCategory
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">None</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="details-actions">
            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i>Back to List
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                <i class="fas fa-edit me-1"></i>Edit
            </a>
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline"
                  onsubmit="return confirm('Are you sure you want to delete this announcement?');">
                <button type="submit" class="btn btn-outline-danger">
                    <i class="fas fa-trash me-1"></i>Delete
                </button>
            </form>
        </div>
    </div>
</div>
