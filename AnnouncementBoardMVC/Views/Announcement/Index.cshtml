@model List<AnnouncementBoardMVC.Models.Announcement>
@{
    ViewData["Title"] = "Announcements";
}
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-bullhorn me-2"></i>Announcements</h1>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Create New
            </a>
            <a asp-action="Filter" class="btn btn-outline-secondary ms-2">
                <i class="fas fa-filter me-1"></i> Filter
            </a>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center p-4">
            <i class="fas fa-info-circle fa-2x mb-3"></i>
            <h4>No announcements found</h4>
            <p>Create your first announcement to get started.</p>
        </div>
    }
    else
    {
        <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="announcement-card card h-100 animated-card">
                    <div class="card-header d-flex justify-content-between align-items-center position-relative">
                        <h5 class="mb-0 card-title">@item.Title</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@item.Description</p>
                        <div class="mt-3">
                            @if (!string.IsNullOrEmpty(item.Category))
                            {
                                <span class="badge bg-secondary me-2">
                                    <i class="fas fa-tag me-1"></i>@item.Category
                                </span>
                            }
                            @if (!string.IsNullOrEmpty(item.SubCategory))
                            {
                                <span class="badge bg-info">
                                    <i class="fas fa-hashtag me-1"></i>@item.SubCategory
                                </span>
                            }
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">Created: @item.CreatedDate.ToString("MMM dd, yyyy")</small>
                            <div>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="fas fa-eye me-1"></i>Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-1">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                    onsubmit="return confirm('Are you sure you want to delete this announcement?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash me-1"></i>Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        </div>
    }
</div>