@model List<AnnouncementBoardMVC.Models.Announcement>
@{
    ViewData["Title"] = "Announcements";
}
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-bullhorn me-2"></i>Announcements</h1>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Create New
            </a>
            <a asp-action="Filter" class="btn btn-outline-secondary ms-2">
                <i class="fas fa-filter me-1"></i> Filter
            </a>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center p-4">
            <i class="fas fa-info-circle fa-2x mb-3"></i>
            <h4>No announcements found</h4>
            <p>Create your first announcement to get started.</p>
        </div>
    }
    else
    {
        <div class="row">
        @foreach (var item in Model)
        {
            @await Html.PartialAsync("_AnnouncementCard", item)
        }
        </div>
    }
</div>