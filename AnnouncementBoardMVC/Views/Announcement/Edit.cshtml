@model Announcement
@{
    ViewBag.Title = "Edit Announcement";
}

<h1>Edit</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="Status" class="form-check-input" />
        <label asp-for="Status" class="form-check-label"></label>
    </div>
    <div>
        <label asp-for="Category"></label>
        <select asp-for="Category" asp-items="new SelectList(ViewBag.Categories)" class="form-control">
            <option value="">-- choose --</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="SubCategory"></label>
        <select asp-for="SubCategory" asp-items="new SelectList(ViewBag.SubCategories)" class="form-control" id="SubCategory" data-selected="@Model.SubCategory">
            <option value="">-- choose --</option>
        </select>
        <span asp-validation-for="SubCategory" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>

@section Scripts {
    <script src="~/js/subcategory-loader.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}