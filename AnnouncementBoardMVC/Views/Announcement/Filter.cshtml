@model AnnouncementFilterViewModel
@{
    ViewData["Title"] = "Filter Announcements";
}

<div class="container">
    <h1>Filter Announcements</h1>

    <form asp-action="Filter" method="post">
        <div class="row">
            <div class="col-md-5">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Categories</h5>
                    </div>
                    <div class="card-body">
                        <div class="categories-list">
                            @foreach (var category in Model.AllCategories)
                            {
                                <div class="form-check">
                                    <input class="form-check-input category-checkbox"
                                           type="checkbox"
                                           value="@category"
                                           id="category_@category"
                                           name="SelectedCategories"
                                    @(Model.SelectedCategories.Contains(category) ? "checked" : "")
                                           data-category="@category">
                                    <label class="form-check-label" for="category_@category">
                                        @category
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-7">
                <div class="card">
                    <div class="card-header">
                        <h5>Subcategories</h5>
                    </div>
                    <div class="card-body">
                        <div id="subcategoriesContainer">
                            @foreach (var category in Model.SelectedCategories)
                            {
                                if (Model.AllSubCategories.ContainsKey(category))
                                {
                                    <div class="subcategory-group" data-parent-category="@category">
                                        <h6 class="mt-3">@category</h6>
                                        <div class="ms-3">
                                            @foreach (var subcategory in Model.AllSubCategories[category])
                                            {
                                                <div class="form-check">
                                                    <input class="form-check-input"
                                                           type="checkbox"
                                                           value="@subcategory"
                                                           id="subcategory_@subcategory"
                                                           name="SelectedSubCategories"
                                                    @(Model.SelectedSubCategories.Contains(subcategory) ? "checked" : "")>
                                                    <label class="form-check-label" for="subcategory_@subcategory">
                                                        @subcategory
                                                    </label>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4 d-flex">
            <button type="submit" class="btn btn-primary me-2">Apply Filters</button>
            <a asp-action="Filter" class="btn btn-outline-secondary">Clear Filters</a>
        </div>
    </form>

    <hr class="my-4">

    <h2>Results (@Model.Results.Count)</h2>
    <div class="row">
        @foreach (var item in Model.Results)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">@item.Title</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@item.Description</p>
                        <div class="text-muted">
                            @if (!string.IsNullOrEmpty(item.Category))
                            {
                                <span class="badge bg-secondary me-2">@item.Category</span>
                            }
                            @if (!string.IsNullOrEmpty(item.SubCategory))
                            {
                                <span class="badge bg-info">@item.SubCategory</span>
                            }
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-end">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-2">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-2">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this announcement?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/filter.js"></script>
}