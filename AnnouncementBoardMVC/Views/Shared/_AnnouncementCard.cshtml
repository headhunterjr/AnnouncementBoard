@model AnnouncementBoardMVC.Models.Announcement

<div class="col-md-6 mb-4">
    <div class="announcement-card card h-100 animated-card">
        <div class="card-header d-flex justify-content-between align-items-center position-relative">
            <h5 class="mb-0 card-title">@Model.Title</h5>
        </div>
        <div class="card-body">
            <p class="card-text">@Model.Description</p>
            <div class="mt-3">
                @if (!string.IsNullOrEmpty(Model.Category))
                {
                    <span class="badge bg-secondary me-2">
                        <i class="fas fa-tag me-1"></i>@Model.Category
                    </span>
                }
                @if (!string.IsNullOrEmpty(Model.SubCategory))
                {
                    <span class="badge bg-info">
                        <i class="fas fa-hashtag me-1"></i>@Model.SubCategory
                    </span>
                }
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">Created: @Model.CreatedDate.ToString("MMM dd, yyyy")</small>
                <div>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary me-1">
                        <i class="fas fa-eye me-1"></i>Details
                    </a>
                    <form asp-action="Refresh" method="post" class="d-inline me-1" onsubmit="return confirm('Refresh Announcement?');">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-sm btn-refresh me-1">
                            <i class="fas fa-sync-alt me-1"></i>Refresh
                        </button>
                    </form>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-warning me-1">
                        <i class="fas fa-edit me-1"></i>Edit
                    </a>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this announcement?');">
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-trash me-1"></i>Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
